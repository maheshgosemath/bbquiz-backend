<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xmlns:beans="http://www.springframework.org/schema/beans"
			 xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<http pattern="/resources/**" security="none" />
	<http pattern="/test" security="none" />
	<http pattern="/quizlist" security="none"/>
	<http pattern="/quizinfo" security="none"/>

	<http use-expressions="true" auto-config="true">
		<!-- Authentication policy -->
		<form-login login-page="/login" default-target-url="/authsuccess"/>
		<!--<logout delete-cookies="JSESSIONID" success-handler-ref="logoutSuccessHandler"/>-->
		<session-management invalid-session-url="/login?error=timeout">
			<concurrency-control max-sessions="1" expired-url="/login?error=multiple"/>
		</session-management>
	</http>

	<global-method-security secured-annotations="enabled" />
	<authentication-manager alias="authenticationManager">
		<authentication-provider>
			<password-encoder ref="passwordEncoder">
			</password-encoder>
			<jdbc-user-service data-source-ref="dataSource"
							   users-by-username-query="select user_id, password, true from user_profile where user_id = ? and status='A'"
							   authorities-by-username-query="select user_id,
																(case 	when r.user_role_cd='EMP' then 'ROLE_EMPLOYEE'
																		when r.user_role_cd='RECTR' then 'ROLE_RECRUITER'
																		when r.user_role_cd='CANDT' then 'ROLE_CANDIDATE'
																		when r.user_role_cd='ADMIN' then 'ROLE_ADMIN'
																		when r.user_role_cd='OWNER' then 'ROLE_OWNER'
																		when r.user_role_cd='REPT_USR' then 'ROLE_REPT_USR'
																		when r.user_role_cd='VENDOR' then 'ROLE_VENDOR'
																end)
															from user_profile u, user_role r
															where user_id = ? and u.user_role_seq=r.user_role_seq"
			/>
		</authentication-provider>
	</authentication-manager>

	<beans:bean id="passwordEncoder" class="org.springframework.security.authentication.encoding.ShaPasswordEncoder">
		<beans:constructor-arg value="256" />
		<beans:property name="encodeHashAsBase64" value="true" />
	</beans:bean>

</beans:beans>
